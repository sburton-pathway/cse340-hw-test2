<%- include('partials/header') %>
<main>
  <h1><%= title %></h1>

  <form action="/edit-project/<%= projectDetails.project_id %>" method="POST">
    <div class="form-group">
      <label for="title">Project Title</label>
      <input
        type="text"
        id="title"
        name="title"
        maxlength="150"
        required
        value="<%= projectDetails.title %>"
      />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        id="description"
        name="description"
        maxlength="500"
        required
      ><%= projectDetails.description %></textarea>
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      <input
        type="text"
        id="location"
        name="location"
        maxlength="255"
        required
        value="<%= projectDetails.location %>"
      />
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input
      type="date"
      id="date"
      name="date"
      required
      value="<%= projectDetails.date ? projectDetails.date.toISOString().split('T')[0] : '' %>"
      />
    </div>

    <div class="form-group">
      <label for="organizationId">Organization</label>
      <select
        id="organizationId"
        name="organizationId"
        required
      >
        <option value="">Select an organization</option>
        <% organizations.forEach(org => { %>
          <option value="<%= org.organization_id %>" <%= org.organization_id === projectDetails.organization_id ? 'selected' : '' %>><%= org.name %></option>
        <% }); %>
      </select>
    </div>



    <button type="submit">Save Changes</button>
  </form>
</main>
<%- include('partials/footer') %>