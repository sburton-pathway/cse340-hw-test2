<%- include('partials/header') %>
<main>
    <h1><%= title %></h1>

 <form action="/new-organization" method="POST">
    <!-- Name (VARCHAR(150) NOT NULL) -->
    <div class="form-group">
      <label for="name">Organization Name</label>
      <input
        type="text"
        id="name"
        name="name"
        maxlength="150"
        required
      />
    </div>

    <!-- Description (TEXT NOT NULL) -->
    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        id="description"
        name="description"
        required
      ></textarea>
    </div>

    <!-- Contact Email (VARCHAR(255) NOT NULL) -->
    <div class="form-group">
      <label for="contact_email">Contact Email</label>
      <input
        type="email"
        id="contact_email"
        name="contact_email"
        maxlength="255"
        required
      />
    </div>

    <!-- Logo Filename (VARCHAR(255) NOT NULL) -->
    <div class="form-group">
      <label for="logo_filename">Logo Filename</label>
      <input
        type="text"
        id="logo_filename"
        name="logo_filename"
        maxlength="255"
        placeholder="brightfuture-logo.png"
        required
      />
    </div>

    <button type="submit">Create Organization</button>
  </form>

</main>
<%- include('partials/footer') %>